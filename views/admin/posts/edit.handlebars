<h1>Edit Posts</h1>

<form action = "/admin/posts/edit/{{post.id}}?_method=PUT" method="post">

  <div class = "form-group">
    <label for="title"> Title </label>
    <input name = "title" type = "text" class="form-control" id="title" value="{{post.title}}">
  </div>
  <div class = "form-group">
    <label for="status">Status</label>
    <select name="status" id="status" class="form-control">

      <!-- object helper being called to displays post status by passing it into the function
           as a paramater -->
       {{#select_object post.status}}
       <!-- Whatever is inside of this function handlebars
            will give us some methods that will allow us to access
            data passed in between this area-->

        <option value="public">Public</option>
        <option value="private">Private</option>
        <option value="draft">Draft</option>

       {{/select_object}}
    </select>
  </div>


  <div class = "form-check">
    <label for="allowComments" class="form-check-label">
    <input name = "allowComments" type = "checkbox" {{#if post.allowComments}} checked="checked" {{/if}} class="form-check-input" id="allowComments">

      Allow Comments

    </label>
  </div>

  <div class = "form-group">
    <label for="description"> Discription </label>
    <textarea name = "body" cols = "30" rows = "10" class="form-control" id="body">{{post.body}}</textarea>
  </div>



<button type="submit" class="btn btn-primary">Submit</button>



</form>
